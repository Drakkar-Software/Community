<% @body_id = 'home' %>

<div class="homepage-hero-image mb-3 position-relative">
  <img class="lazyload hero-image position-absolute"
    data-src="<%= asset_path('homepage/main_banner.jpg') %>"
    data-srcset="<%= image_source_set('homepage/main_banner') %>"
    alt="Summer Collection">

  <div class="hero-content">
    <%# start override %>
    <div class="homepage-hero-image-text mb-2 mx-auto pb-3 pb-md-4">
      <%= Spree.t('home_page.banner_message') %>
    </div>
    <div>
      <% if spree_current_user %>
        <%= link_to Spree.t(:'home_page.my_profile'), spree.account_path, class: 'btn btn-primary spree-btn px-5' %>
    <% else %>
        <%= link_to Spree.t(:'home_page.register'), spree_signup_path, class: 'btn btn-primary spree-btn px-5' %>
    <% end %>
    </div>
    <%# end override %>
  </div>
</div>

<%= render 'spree/home/preview' %>
